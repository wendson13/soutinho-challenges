{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:001": "turbo run dev --filter border-radius-previewer",
    "dev:002": "turbo run dev --filter flags-with-css",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@types/styled-components": "^5.1.26",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "prettier": "^2.5.1",
    "turbo": "^1.7.2"
  },
  "packageManager": "npm@9.2.0"
}
